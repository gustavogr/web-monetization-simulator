{
  "manifest_version": 2,
  "name": "Web Monetization Simulator",
  "version": "0.0.1",
  "icons": {
    "128": "icons/monetization_active.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "128": "icons/no_monetization.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
